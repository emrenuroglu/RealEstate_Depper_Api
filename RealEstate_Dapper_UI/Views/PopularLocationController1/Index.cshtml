@model List<RealEstate_Dapper_UI.DTOS.PopularLocationDtos.ResultPopularLocaionDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}
<style>
    img {
        border-radius: 50%;
    }
</style>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Popüler Lokasyonlar Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şehir Adı</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td><img src="@item.ImageUrl" height="50" width="50" />   @item.CityName</td>
                                    <td>
                                        <form asp-action="DeletePopularLocation" method="post" onsubmit="return confirmDelete()">
                                            <input type="hidden" name="id" value="@item.LocationID" />
                                            <button type="submit" class="btn btn-outline-danger">Sil</button>
                                        </form>
                                    </td>
                                    <td><a href="/PopularLocationController1/UpdatePopularLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/PopularLocationController1/CreatePopularLocation/" class="btn btn-outline-info">Yeni Lokasyon Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    function confirmDelete() {
        return confirm("Bu kaydı silmek istediğinizden emin misiniz?");
    }
</script>
